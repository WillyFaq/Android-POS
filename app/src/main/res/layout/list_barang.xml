<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">
    <TextView
        android:id="@+id/txt_list_barang_nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sunandar (XL)"
        android:textColor="#FFF"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/txt_list_barang_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jenis | Warna | Stok"
        android:textColor="#FFF"
        />
    <TextView
        android:id="@+id/txt_list_barang_harga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rp, 50.000 | Rp, 50.000"
        android:textColor="#FFF"
        />
    <TextView
        android:id="@+id/txt_list_barang_supllier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Supplier"
        android:textColor="#FFF"
        />
</LinearLayout>